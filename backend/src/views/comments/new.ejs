<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <link rel="stylesheet" href="/style.css">
  <title>New Comment</title>
</head>
<body>
  <h1>New Comment</h1>
  <a href="/v1/comments">back</a>

  <form action="/v1/comments" method="POST">
    <label for="comment[description]">description:
      <input type="text" name="comment[description]" value="<%= comment.description %>">
    </label>
    <%= JSON.stringify(comment) %>
    <% errors && errors.forEach(({message}) => {  %>
      <p><%= message %></p>
    <% }) %>
    
    <input type="submit" name="submit" value="Save">
  </form>

</body>
</html>
